---
import Twitter from "../assets/icons/brand-twitter-filled.svg";
import Github from "../assets/icons/brand-github-filled.svg";
import LinkedIn from "../assets/icons/brand-linkedin.svg";
import Play from "../assets/icons/player-play-filled.svg";
import RotateClockwise from "../assets/icons/rotate-clockwise.svg";

import "../styles/index.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Clock</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body>
    <header>
      <div class="phone-view">
        <button id="navbar-menu" title="navbar-menu"></button>
        <h1>Stopwatch</h1>
      </div>
      <nav>
        <ul>
          <li><a href="/">Clock</a></li>
          <li>
            <a href="/stopwatch" class="selected" tabindex="-1">Stopwatch</a>
          </li>
          <li><a href="/timer">Timer</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <div class="stopwatch container">
        <div class="progress"></div>
        <div class="stopwatch">
          <input id="time" readonly value="00:00" />
          <span id="mili">000</span>
        </div>
      </div>
      <div class="title">
        <h1>Stopwatch</h1>
      </div>
      <div class="actions">
        <div class="buttons">
          <button class="image-button" id="play-stopwatch">
            <img src={Play.src} alt="play" />
            <span>Play</span>
          </button>
          <button class="image-button" id="reset-stopwatch">
            <img src={RotateClockwise.src} alt="reset" />
            <span>Reset</span>
          </button>
        </div>
      </div>
    </main>
    <footer>
      <span>Created by IsaacGH</span>
      <ul>
        <li>
          <a href="https://twitter.com/isaacgh_0">
            <img src={Twitter.src} alt="twitter" title="Twitter" />
          </a>
        </li>
        <li>
          <a href="https://github.com/isaacgh0">
            <img src={Github.src} alt="github" title="Gitbub" />
          </a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/isaacgh0/">
            <img src={LinkedIn.src} alt="linkedin" title="LinkedIn" />
          </a>
        </li>
      </ul>
      <span>
        <a href="https://tabler-icons.io/">Icons from TablerIcons.io</a>
      </span>
    </footer>
    <script src="../scripts/stopwatch.js"></script>
    <script src="../scripts/header.js"></script>
  </body>
</html>
